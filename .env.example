# Family Bank Environment Variables
# Copy this file to .env and fill in your actual values
# The .env file is gitignored and won't be committed

# REQUIRED: Change this to a random secret key for session encryption
# Generate one with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-random-secret-key-minimum-32-characters

# Database location (optional, defaults to family_bank.db)
DATABASE_PATH=/data/family_bank.db

# Server port (optional, defaults to 5000)
PORT=5000

# Flask debug mode (optional, defaults to false)
# WARNING: Never set to true in production!
FLASK_DEBUG=false
